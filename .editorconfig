# See https://editorconfig.org/ for syntax reference.

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,hpp,c,h}]
indent_size = 4
tab_width = 4

[*.py]
indent_size = 4
indent_style = tab
max_line_length = 79

[*.{json,yml}]
indent_size = 2

[*.sh]
indent_size = 2

[*.{md,markdown}]
indent_size = 2
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 2

# Git will invoke your editor with a file called "COMMIT_EDITMSG",
# which is the temporary buffer for your commit message.
[COMMIT_EDITMSG]
max_line_length = 72
